/* CSS declarations go here */

@import url(http://fonts.googleapis.com/css?family=Roboto:400,300,500,700,300italic,400italic,900,900italic,500italic,100italic,100,700italic);

body, html, h1, h2, h3, h4, h5, h6
  font-family: 'Roboto', sans-serif;

body, html
  background: white;
  width: 1920px;
  height: 1080px;
  overflow: hidden;

.row.gridster-header
  padding: 10px

h1
  font-weight: 300

.gridster
  width: 100%

  ul
    list-style: none
    li.metro-tile, .preview-holder
      background-color: green
      list-style: none
      color: white
      padding: 20px
      font-size: 9px
      h2
        font-size: 48px
        font-weight: 300
        color: white
      a.remove-tile, a.tile-settings
        display: block
        font-size: 12px
        color: white
        position: absolute
        top: 5px
        right: 5px

      a.tile-settings
        left: 5px

      &.alert
        border:2px solid #aa0000;
        // box-shadow: 0 0 20px red;
        h2, h5, h6
          text-shadow: 0 0 2px black;
        background-image: repeating-linear-gradient(-45deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2) 8px, rgba(150, 0, 0, 0.5) 8px, rgba(150, 0, 0, 0.5) 16px) !important

        -ms-animation-duration: 500ms;
        // -ms-animation-iteration-count: infinite;

      img.gravatar
        width: 50px
        height: 50px
        position: absolute
        right: 0
        bottom: 0

      h2
        margin-bottom: 10px

      h5
        margin-top: 5px
        margin-bottom: 0

      h6
        margin-top: 5px
        font-size: 13px



    .preview-holder
      background: rgba(0,0,0,0.2)
      width: 100%

.row
  width: 1920px;
  min-width: 0

#wizard-toggle
  color: rgba(0,0,0,0.7)
  margin-top: 15px
  font-size: 30px
  float: right

#tile-wizard
  display: none
  position: fixed
  top:0
  right:0
  z-index: 10
  height: 100%
  width: 300px
  // background: rgba(255,255,255,0.85)
  // padding: 25px
  // color: white
  box-shadow: 0 0 20px black

  #back-wizard
    color: black
    float: left
    margin-right: 20px

  #close-wizard
    z-index: 2
    display: block
    font-size: 40px
    // color: white
    position: absolute
    top: 10px
    right: 20px

  .tilebutton
    display: block
    width: 80%
    height: 100px
    margin: 0px auto
    margin-bottom: 25px;


  .button
    border: none
    box-shadow: none

  #clear-button
    position: absolute
    right: 25px
    bottom: 20px

  .colorpicker
    float: left
    width: 80%

form.custom div.custom.dropdown
  width:100% !important

form.custom div.custom.dropdown ul
  width:100% !important


.mathquill-embedded-latex
  font-size: 40px

.columns.no-padding{
  padding: 0;
}

.commit-text
  height: 40px
  width: 220px
  p
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis