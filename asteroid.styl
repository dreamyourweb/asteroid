@import url(http://fonts.googleapis.com/css?family=Roboto:400,300,500,700,300italic,400italic,900,900italic,500italic,100italic,100,700italic);

body, html
  font-family: 'Roboto', sans-serif;

.gridster
  width: 100%
  ul
    list-style: none
    li.metro-tile
      background-color: green
      list-style: none
      color: white
      padding: 20px
      font-size: 9px
      h2
        font-size: 48px
        font-weight: 100
      a.remove-tile
        display: block
        font-size: 20px
        color: white
        position: absolute
        top: 5px
        right: 10px

